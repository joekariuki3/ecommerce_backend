#!/bin/bash
# Pre-push Git hook to run tests before allowing a push
# Save this script as .git/hooks/pre-push and make it executable (chmod +x .git/hooks/pre-push)

# Check if tests should be skipped
if [ "$1" == "--no-verify" ]; then
    echo "⚠️  Skipping tests as per --no-verify flag."
    exit 0
fi

echo "🧪 Running pre-push tests..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if pytest is installed
if ! command -v pytest &> /dev/null; then
    echo -e "${RED}❌ pytest is not installed. Please install it first.${NC}"
    exit 1
fi

# Run tests
echo "🔬 Running pytest..."
if pytest --tb=short -q; then
    echo -e "${GREEN}✅ All tests passed!${NC}"
    echo -e "${GREEN}🚀 Proceeding with push...${NC}"
    exit 0
else
    echo -e "${RED}❌ Tests failed!${NC}"
    echo -e "${YELLOW}💡 Fix the failing tests or use 'git push --no-verify' to skip tests${NC}"
    exit 1
fi